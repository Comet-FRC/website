---
import { getCollection } from "astro:content";
const { showAll = true, limit = 4 } = Astro.props;

const allRobots = await getCollection("robots", ({ data }) =>
  import.meta.env.PROD ? !data.draft : true
);
const activeRobots = allRobots
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, showAll ? undefined : limit);
---

<section id="robots" class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">Our Robots</h2>
    <p class="text-center text-gray-600 mb-12">
      Here is a collection of all COMET robots.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-fr">
      {activeRobots.map(robots => (
        <div class="bg-white rounded-lg shadow overflow-hidden flex flex-col h-full">
          {/* Robot Picture Container - BIGGER HEIGHT for better visibility */}
          <div class="relative w-full h-48 p-4 flex items-center justify-center flex-shrink-0">
            <img loading="lazy"
              src={robots.data.pic}
              alt={robots.data.name}
              class="max-w-full max-h-full object-contain"
            />
          </div>

          {/* Main Content Area - This needs to contain ALL text and the links */}
          <div class="p-4 flex flex-col flex-1"> {/* flex-1 here is key */}
            
            {/* Top portion of content (Name, season, Description) */}
            <div class="text-center"> {/* Added text-center here for all top content */}
              <h3 class="text-xl font-semibold mb-1">{robots.data.name}</h3>
              {robots.data.season && (
                <p class="text-primary-600 mb-2">{robots.data.season} Robots</p>
              )}
              {robots.data.description && (
                <p class="text-gray-700 text-sm">{robots.data.description}</p>
              )}
            </div>
            
            {/* SPACER DIV - This pushes the links to the bottom */}
            <div class="flex-grow"></div> 

            {/* Links section - now consistently at the bottom */}
            <div class="mt-4 space-y-1 text-sm text-center flex-shrink-0"> {/* flex-shrink-0 to prevent shrinking */}
              {robots.data.cad && (
                <a
                  href={robots.data.cad}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:underline block"
                >
                  Explore CAD
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>