---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout
  title="Contact Us - Comet Robotics"
  description="Get in touch with our church. Find our contact information, location, and service times."
>
  <PageHeader
    title="Contact"
    subtitle=""
    backgroundImage="/uploads/header/header-bg.avif"
  />

  <style>
    /*
      This CSS ensures that when the browser scrolls to #contact-heading
      (either via scrollIntoView or an anchor link), it leaves a
      gap at the top, typically for a fixed header.
      Adjust the '80px' to match the height of your site's fixed header.
    */
    #contact-heading {
      scroll-margin-top: 7ex; /* IMPORTANT: Adjust this value as needed */
      /* You might also add a little extra padding if 80px is just the header */
      /* scroll-margin-top: calc(80px + 20px); // Example for 80px header + 20px extra space */
    }
  </style>

  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h2 id="contact-heading" class="text-3xl font-bold mb-6">Send Us a Message</h2>

          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone (optional)</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              >
                <option value="">Please select</option>
                <option value="General Inquiry">General Inquiry</option>
                <option value="Application">Application</option>
                <option value="Sponsorship">Sponsorship</option>
                <option value="Events">Events</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>

            <div>
              <Button type="submit" variant="primary">
                Send Message
              </Button>
            </div>
          </form>

          <script>
            // Handle form submission (this is still for client-side JS submission, e.g., to a form service)
            document.getElementById('contact-form')?.addEventListener('submit', function(e) {
              e.preventDefault();

              // In a real implementation, you would handle the form submission here
              // For this template, we'll just show a success message
              alert('Thank you for your message! We will get back to you soon.');
              (this as HTMLFormElement).reset(); // Correctly cast 'this' to HTMLFormElement for the reset method
            });

            // --- JavaScript for pre-selecting subject and scrolling to heading ---
            document.addEventListener('DOMContentLoaded', () => {
              const urlParams = new URLSearchParams(window.location.search);
              const subjectParam = urlParams.get('subject');

              const subjectSelect = document.getElementById('subject') as HTMLSelectElement | null;
              const contactHeading = document.getElementById('contact-heading'); // Get the heading element

              if (subjectParam && subjectSelect) {
                // Loop through options and select the one that matches the URL parameter
                for (let i = 0; i < subjectSelect.options.length; i++) {
                  if (subjectSelect.options[i].value === subjectParam) {
                    subjectSelect.selectedIndex = i; // Set the selected index
                    break; // Exit the loop once found
                  }
                }

                // Scroll to the heading if a subject was present
                if (contactHeading) {
                  contactHeading.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start' // Aligns the top of the heading with the top of the viewport (offset handled by CSS)
                  });
                }
              }
            });
          </script>
        </div>

        <div>
          <div class="mt-8">
            <h3 class="text-xl font-bold mb-4">Connect With Us</h3>
            <div class="flex space-x-4">
              <a href="https://m.facebook.com/100090666650422" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600 transition-colors">
